{% extends 'template.html.twig' %}

{% block title %}Atelier Beaumerle - Nous écrire{% endblock %}

{% block link %}
    <link rel="stylesheet" href="{{ asset('/css/contact.css') }}">
{% endblock %}

{% block script %}
    <script src="{{asset('/scripts/mainmenu.js')}}" defer></script>
    <script src="{{asset('/scripts/contact.js')}}" defer></script>
{% endblock %}

{% block body %}
    <div class="contenu">
        <div class="form-container">
            <h1 class="form-title">Nous écrire :</h1>
            {{ form_start(formcontact, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}
                <div class="input-group">
                    {{ form_label(formcontact.email, "Email :") }}
                    {{ form_widget(formcontact.email) }}
                    {{ form_errors(formcontact.email) }}
                </div>
                <div class="input-group object">
                    {{ form_label(formcontact.object, "Objet :") }}
                    {{ form_widget(formcontact.object) }}
                    {{ form_errors(formcontact.object) }}
                </div>                
                <div class="input-group knife">
                    {{ form_label(formcontact.reservation, "Je suis intéressé par :") }}
                    {{ form_widget(formcontact.reservation) }}
                    {{ form_errors(formcontact.reservation) }}
                </div>
                <div class="input-group">
                    {{ form_label(formcontact.text, "Message :") }}
                    {{ form_widget(formcontact.text) }}
                    {{ form_errors(formcontact.text) }}
                </div>
                <button class="add-button">Envoyer</button>           
            {{ form_end(formcontact) }}
        </div>
    </div>
{% endblock %}
