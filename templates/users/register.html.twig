{% extends "template.html.twig" %}
{# {% form_theme form 'fields.twig' %} #}

{% block title %}Inscription{% endblock %}

{% block link %}
    <link rel="stylesheet" href="{{asset('/css/register.css')}}">
{% endblock %}

{% block script %}
    <script src="{{asset('/scripts/register.js')}}" defer></script>
{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="full-screen-container">
        <div class="login-container">
            <h1 class="login-title">Bienvenue</h1>
            <div class="form">
                <div class="input-group firstname">
                    {{ form_label(form.firstname, 'Pr√©nom') }}
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                    <span class="message"></span>
                </div>
                <div class="input-group lastname">
                    {{ form_label(form.lastname, 'Nom') }}
                    {{ form_widget(form.lastname) }}
                    {{ form_errors(form.lastname) }}
                    <span class="message"></span>
                </div>
                <div class="input-group email">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                    <span class="message"></span>
                </div>
                <div class="input-group address">
                    {{ form_label(form.address, 'Adresse') }}
                    {{ form_widget(form.address) }}
                    {{ form_errors(form.address) }}
                    <span class="message"></span>
                </div>
                <div class="input-group password">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password) }}
                    {{ form_errors(form.password) }}
                    <span class="message"></span>
                </div>
                <div class="input-group confirmpassword">
                    {{ form_label(form.confirmpassword, 'Confirmer le mot de passe') }}
                    {{ form_widget(form.confirmpassword) }}
                    {{ form_errors(form.confirmpassword) }}
                </div>
                <button type="submit" class="login-button">S'inscrire</button>
            </div>
            <div class="navigation">
                <a href="{{path('home')}}">Accueil</a>
                <a href="{{path('app_login')}}">Se connecter</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}