{% extends "template.html.twig" %}
{# {% form_theme form 'fields.twig' %} #}

{% block title %}Inscription{% endblock %}

{% block link %}
    <link rel="stylesheet" href="{{asset('/css/register.css')}}">
{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="full-screen-container">
        <div class="login-container">
            <h1 class="login-title">Bienvenue</h1>
            <div class="form">
                <div class="input-group">
                    {{ form_label(form.firstname, 'Pr√©nom') }}
                    {{ form_widget(form.firstname) }}
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="input-group">
                    {{ form_label(form.lastname, 'Nom') }}
                    {{ form_widget(form.lastname) }}
                    {{ form_errors(form.lastname) }}
                </div>
                <div class="input-group">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="input-group">
                    {{ form_label(form.address, 'Adresse') }}
                    {{ form_widget(form.address) }}
                    {{ form_errors(form.address) }}
                </div>
                <div class="input-group">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password) }}
                    {{ form_errors(form.password) }}
                </div>
                <div class="input-group">
                    {{ form_label(form.confirmpassword, 'Confirmer le mot de passe') }}
                    {{ form_widget(form.confirmpassword) }}
                    {{ form_errors(form.confirmpassword) }}
                </div>
                <button type="submit" class="login-button">S'inscrire</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}